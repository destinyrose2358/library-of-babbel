{
    "compilerOptions": {
        "composite": true,
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "Node",
        "strict": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./**/*.ts", "./**/*.tsx"]
}